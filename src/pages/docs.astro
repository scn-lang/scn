---
import Layout from '../layouts/Layout.astro';
import SpecificationContent from '../components/SpecificationContent.astro';
---

<Layout title="SCN Documentation - Symbolic Context Notation">
  <main class="min-h-screen">
    <!-- Header -->
    <header class="sticky top-0 z-50 bg-slate-900/80 backdrop-blur-sm border-b border-slate-700/50">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
          â—® SCN
        </a>
        <nav class="hidden md:flex items-center gap-6">
          <a href="/" class="text-slate-400 hover:text-white transition-colors">Home</a>
          <a href="/docs/#specification" class="text-slate-400 hover:text-white transition-colors">Specification</a>
          <a href="/docs/#examples" class="text-slate-400 hover:text-white transition-colors">Examples</a>
          <a href="https://github.com/scn-lang/scn" target="_blank" class="bg-gradient-to-r from-blue-500 to-purple-600 px-4 py-2 rounded-lg text-sm font-semibold">
            GitHub
          </a>
        </nav>
        
        <!-- Mobile menu button -->
        <button class="md:hidden text-slate-400 hover:text-white" onclick="toggleMobileMenu()">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-slate-900/95 backdrop-blur-sm border-b border-slate-700/50">
        <div class="px-6 py-4 space-y-3">
          <a href="/" class="block text-slate-400 hover:text-white transition-colors">Home</a>
          <a href="/docs/#specification" class="block text-slate-400 hover:text-white transition-colors">Specification</a>
          <a href="/docs/#examples" class="block text-slate-400 hover:text-white transition-colors">Examples</a>
          <a href="https://github.com/scn-lang/scn" target="_blank" class="block bg-gradient-to-r from-blue-500 to-purple-600 px-4 py-2 rounded-lg text-sm font-semibold text-center">
            GitHub
          </a>
        </div>
      </div>
    </header>

    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
      }
    </script>

    <SpecificationContent />
  </main>
</Layout>