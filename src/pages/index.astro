---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Examples from '../components/Examples.astro';
import Comparison from '../components/Comparison.astro';
import CTA from '../components/CTA.astro';
---

<Layout title="SCN - Symbolic Context Notation">
  <!-- Navigation Header -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-slate-900/80 backdrop-blur-sm border-b border-slate-700/50">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
      <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
        â—® SCN
      </a>
      <nav class="hidden md:flex items-center gap-6">
        <a href="/#features" class="text-slate-400 hover:text-white transition-colors">Features</a>
        <a href="/#examples" class="text-slate-400 hover:text-white transition-colors">Examples</a>
        <a href="/docs/" class="text-slate-400 hover:text-white transition-colors">Documentation</a>
        <a href="https://github.com/scn-lang/scn" target="_blank" class="bg-gradient-to-r from-blue-500 to-purple-600 px-4 py-2 rounded-lg text-sm font-semibold hover:from-blue-600 hover:to-purple-700 transition-all">
          GitHub
        </a>
      </nav>
      
      <!-- Mobile menu button -->
      <button class="md:hidden text-slate-400 hover:text-white" onclick="toggleMobileMenu()">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-slate-900/95 backdrop-blur-sm border-b border-slate-700/50">
      <div class="px-6 py-4 space-y-3">
        <a href="/#features" class="block text-slate-400 hover:text-white transition-colors">Features</a>
        <a href="/#examples" class="block text-slate-400 hover:text-white transition-colors">Examples</a>
        <a href="/docs/" class="block text-slate-400 hover:text-white transition-colors">Documentation</a>
        <a href="https://github.com/scn-lang/scn" target="_blank" class="block bg-gradient-to-r from-blue-500 to-purple-600 px-4 py-2 rounded-lg text-sm font-semibold hover:from-blue-600 hover:to-purple-700 transition-all text-center">
          GitHub
        </a>
      </div>
    </div>
  </header>

  <script>
    function toggleMobileMenu() {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    }
  </script>

  <Hero />
  <Features />
  <Examples />
  <Comparison />
  <CTA />
</Layout>